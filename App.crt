            });
        }

        function runOptimization(action, card) {
            const statusEl = card.querySelector('.action-status');
            const originalStatus = statusEl.textContent;
            
            card.classList.add('active');
            statusEl.classList.add('optimizing');
            
            const actions = {
                'cool': 'ƒêang l√†m m√°t...',
                'speed': 'ƒêang tƒÉng t·ªëc...',
                'clean': 'ƒêang d·ªçn RAM...',
                'battery': 'ƒêang t·ªëi ∆∞u pin...',
                'network': 'ƒêang t·ªëi ∆∞u m·∫°ng...',
                'storage': 'ƒêang d·ªçn b·ªô nh·ªõ...'
            };
            
            statusEl.textContent = actions[action] || 'ƒêang x·ª≠ l√Ω...';
            
            if (navigator.vibrate) navigator.vibrate(20);
            
            setTimeout(() => {
                statusEl.classList.remove('optimizing');
                statusEl.classList.add('done');
                statusEl.textContent = 'Ho√†n th√†nh!';
                
                if (navigator.vibrate) navigator.vibrate([10, 50, 10]);
                
                showNotification('Th√†nh c√¥ng!', `ƒê√£ ${originalStatus.toLowerCase()}`);
                
                setTimeout(() => {
                    card.classList.remove('active');
                    statusEl.classList.remove('done');
                    statusEl.textContent = originalStatus;
                }, 2000);
            }, 1500 + Math.random() * 1000);
        }

