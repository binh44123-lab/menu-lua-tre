        function initHealthScore() {
            const healthRing = document.getElementById('healthRing');
            const healthScore = document.getElementById('healthScore');
            const targetScore = 92;
            const circumference = 2 * Math.PI * 90;
            
            setTimeout(() => {
                const offset = circumference - (targetScore / 100) * circumference;
                healthRing.style.strokeDashoffset = offset;
                animateValue(healthScore, 0, targetScore, 2000);
            }, 500);

            document.getElementById('tempValue').textContent = '28¬∞C';
            document.getElementById('ramValue').textContent = '38%';
            document.getElementById('storageValue').textContent = '32GB';
            document.getElementById('batteryValue').textContent = '85%';
            document.getElementById('networkValue').textContent = '12ms';
        }

        function animateValue(element, start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                element.textContent = Math.floor(progress * (end - start) + start);
                if (progress < 1) window.requestAnimationFrame(step);
            };
            window.requestAnimationFrame(step);
        }

        function initCharts() {
            const cpuData = [25, 35, 28, 42, 30, 22, 35, 45, 38, 28, 32, 38, 42, 32, 35, 28, 40, 45, 35, 28, 32, 38, 28, 22];
            const tempData = [26, 30, 32, 35, 38, 35, 32, 30, 28, 26, 30, 32, 35, 32, 30, 28, 26, 30, 32, 30, 28, 26, 24, 23];
            const ramData = [35, 42, 38, 48, 45, 40, 38, 52, 48, 42, 45, 50, 48, 42, 40, 38, 45, 50, 45, 40, 42, 45, 40, 35];
            
            createChart('cpuChart', cpuData);
            createChart('tempChart', tempData);
            createChart('ramChart', ramData);
        }

        function createChart(containerId, data) {
            const container = document.getElementById(containerId);
            if (!container) return;
            
            container.innerHTML = '';
            const maxValue = Math.max(...data);
            
            data.forEach((value, index) => {
                const bar = document.createElement('div');
                bar.className = 'chart-bar';
                bar.style.height = '0%';
                container.appendChild(bar);
                
                setTimeout(() => {
                    bar.style.height = (value / maxValue * 100) + '%';
                }, index * 40);
            });
        }

        function initActionCards() {
            const cards = document.querySelectorAll('.action-card');
            
            cards.forEach(card => {
                card.addEventListener('click', function() {
                    const action = this.dataset.action;
                    runOptimization(action, this);
