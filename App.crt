        function runScan(scanType) {
            const loadingOverlay = document.getElementById('loadingOverlay');
            const successOverlay = document.getElementById('successOverlay');
            const loadingText = document.getElementById('loadingText');
            const progressBar = document.getElementById('loadingProgressBar');
            const successDetails = document.getElementById('successDetails');
            
            loadingOverlay.classList.add('show');
            
            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.random() * 15;
                if (progress > 100) progress = 100;
                
                progressBar.style.width = progress + '%';
                
                if (progress < 30) loadingText.textContent = 'ƒêang qu√©t...';
                else if (progress < 60) loadingText.textContent = 'ƒêang ph√¢n t√≠ch...';
                else if (progress < 90) loadingText.textContent = 'ƒêang t·ªëi ∆∞u...';
                else loadingText.textContent = 'Ho√†n t·∫•t...';
                
                if (progress >= 100) {
                    clearInterval(interval);
                    
                    setTimeout(() => {
                        loadingOverlay.classList.remove('show');
                        progressBar.style.width = '0%';
                        
                        successDetails.innerHTML = `${scanType} ho√†n t·∫•t!<br>Thi·∫øt b·ªã ƒë√£ ƒë∆∞·ª£c t·ªëi ∆∞u th√†nh c√¥ng`;
                        successOverlay.classList.add('show');
                        createSuccessParticles();
                        
                        if (navigator.vibrate) navigator.vibrate([50, 100, 50]);
                        
                        setTimeout(() => {
                            successOverlay.classList.remove('show');
                        }, 2500);
                    }, 300);
                }
            }, 200);
        }

        function runFullOptimization() {
            const loadingOverlay = document.getElementById('loadingOverlay');
            const successOverlay = document.getElementById('successOverlay');
            const loadingText = document.getElementById('loadingText');
            const progressBar = document.getElementById('loadingProgressBar');
            
            const steps = [
                'ƒêang ph√¢n t√≠ch h·ªá th·ªëng...',
                'ƒêang d·ªçn d·∫πp cache...',
                'ƒêang t·ªëi ∆∞u RAM...',
                'ƒêang l√†m m√°t CPU...',
                'ƒêang t·ªëi ∆∞u pin...',
                'ƒêang t·ªëi ∆∞u m·∫°ng...',
                'ƒêang qu√©t b·∫£o m·∫≠t...',
                'ƒêang ho√†n t·∫•t...'
            ];
            
            loadingOverlay.classList.add('show');
            if (navigator.vibrate) navigator.vibrate(30);
            
            let currentStep = 0;
            const totalSteps = steps.length;
            
            function nextStep() {
                if (currentStep < totalSteps) {
                    loadingText.textContent = steps[currentStep];
                    progressBar.style.width = ((currentStep + 1) / totalSteps * 100) + '%';
                    currentStep++;
                    setTimeout(nextStep, 600 + Math.random() * 400);
                } else {
                    loadingOverlay.classList.remove('show');
                    progressBar.style.width = '0%';
                    
                    setTimeout(() => {
                        successOverlay.classList.add('show');
                        createSuccessParticles();
                        
                        if (navigator.vibrate) navigator.vibrate([50, 100, 50, 100, 50]);
                        
                        const healthRing = document.getElementById('healthRing');
                        const healthScore = document.getElementById('healthScore');
                        const newScore = 97 + Math.floor(Math.random() * 3);
                        const circumference = 2 * Math.PI * 90;
                        const offset = circumference - (newScore / 100) * circumference;
                        healthRing.style.strokeDashoffset = offset;
                        animateValue(healthScore, 92, newScore, 500);
                        
                        document.getElementById('tempValue').textContent = '24¬∞C';
                        document.getElementById('ramValue').textContent = '28%';
                        document.getElementById('networkValue').textContent = '8ms';
                        
                        setTimeout(() => {
                            successOverlay.classList.remove('show');
                        }, 2500);
                    }, 300);
                }
            }
            
            nextStep();
        }

        function createSuccessParticles() {
            const colors = ['#00D9FF', '#7B2FFF', '#00FF88', '#FFB800', '#FFFFFF'];
            
            for (let i = 0; i < 40; i++) {
                const particle = document.createElement('div');
                particle.style.cssText = `
                    position: fixed;
                    width: ${Math.random() * 8 + 4}px;
                    height: ${Math.random() * 8 + 4}px;
                    background: ${colors[Math.floor(Math.random() * colors.length)]};
                    border-radius: 50%;
                    left: 50%;
                    top: 50%;
                    pointer-events: none;
                    z-index: 1002;
                `;
                document.body.appendChild(particle);
                
                const angle = Math.random() * Math.PI * 2;
                const velocity = Math.random() * 250 + 80;
                const vx = Math.cos(angle) * velocity;
                const vy = Math.sin(angle) * velocity;
                
                let x = 0, y = 0, opacity = 1;
                
                function animate() {
                    x += vx * 0.02;
                    y += vy * 0.02 + 1.5;
                    opacity -= 0.025;
                    
                    particle.style.transform = `translate(${x}px, ${y}px)`;
                    particle.style.opacity = opacity;
                    
                    if (opacity > 0) requestAnimationFrame(animate);
                    else particle.remove();
                }
                
                requestAnimationFrame(animate);
            }
        }

        function showNotification(title, message) {
            const notification = document.getElementById('notification');
            const notificationTitle = document.getElementById('notificationTitle');
            const notificationMessage = document.getElementById('notificationMessage');
            
            notificationTitle.textContent = title;
            notificationMessage.textContent = message;
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 2500);
        }
    </script>
</body>
